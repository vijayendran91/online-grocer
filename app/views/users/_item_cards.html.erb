<%item_ctg.each do |itm_ctg, item_data|%>
  <div id=<%=itm_ctg%>>
    <br><br><br>
    <h4><%=Item::ITEM_CATAGORIES[itm_ctg]%></h4>
    <div style="display: flex;">
      <div style="display: flex;">
        <%item_data.each do |item|%>
          <div class="card item-card" style="width: 10rem;">
            <%= image_tag item.image.url%>
            <div class="card-body">
              <h7 class="card-title"><%=item[:itm_name]%></h7>
              <div class="col">
                <a href="javascript:void(0)">
                  <i class="bi bi-cart-dash removeFromCart" data-item-id=<%=item[:itm_id]%>>
                  </i>
                </a>
                <a href="javascript:void(0)">
                  <i class="bi bi-cart-plus addToCart" data-item-id=<%=item[:itm_id]%>>
                  </i>
                </a>
              </div>
            </div>
          </div>
        <%end%>
      </div>
    </div>
  </div>
<%end%>
