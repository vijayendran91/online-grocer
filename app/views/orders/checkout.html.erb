<h1>Checkout</h1>
<button id="rzp-button1" class="btn rp-btn">Pay Now</button>
<div class="embed-responsive embed-responsive-21by9">
  <iframe src="<%= url_for :action => 'icart' %>" class="icart"scrollbars="auto" name="icart" seamless></iframe>
</div>
<script src="https://checkout.razorpay.com/v1/checkout.js"></script>
<script>
  var script = document.createElement('script');
  console.log(<%= @options.to_json.html_safe %>);
  var options = <%=@options.to_json.html_safe%>;
  var rzp1 = new Razorpay(options);
  $(document).ready(function(){
    $('#rzp-button1').click(function(e){
      rzp1.open();
      e.preventDefault();
    });
  });
</script>
