<h1>Checkout</h1>
<div>
  <table class="table order-summary">
    <thead style="float:left;">
      <tr>
        <bold><th scope="col">Total Price</th></bold>
        <td><%=@order[:total_price]%></td>
      </tr>
      <tr>
        <bold><th scope="col">GST</th></bold>
        <td>13%</td>
      </tr>
      <tr>
        <bold><th scope="col">Delivery Address</th></bold>
        <td>No.14, A-1, Vivekanandapuram 1st street, West Mambalam, Chennai - 600033</td>
      </tr>
      <tr>
        <bold><th scope="col">Contact Phone</th></bold>
        <td> +91-9962395973</td>
      </tr>
    </thead>
    <tbody>
      <tr><tr>
      <tr><td><button id="rzp-button1" class="btn rp-btn">Pay Now</button><td><tr>
    </tbody>
  </table>
</div>

<div>
  <iframe src="<%= url_for :action => 'icart' %>" class="icart"scrollbars="auto" name="icart" seamless></iframe>
</div>

<script src="https://checkout.razorpay.com/v1/checkout.js"></script>
<script>
  console.log(<%= @options.to_json.html_safe %>);
  var options = <%=@options.to_json.html_safe%>;
  $(document).ready(function(){
    document.getElementById('rzp-button1').onclick = function(e){
      var rzp1 = new Razorpay(options);
      rzp1.open();
      e.preventDefault();
    }
  });
</script>
