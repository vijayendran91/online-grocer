<%if !(@items.empty?)%>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Item Name</th>
        <th scope="col">Item Image</th>
        <th scope="col">Item Price</th>
        <th scope="col"></th>
        <th scope="col">Quantity</th>
        <th scope="col">Total Price</th>
      </tr>
    </thead>
    <tbody>
      <%(0..@items.size-1).each do |i| %>
      <tr>
        <th scope="row"><%=i+1%></th>
        <td><%=@items[i][:itm_name] %></td>
        <td><%= image_tag @items[i].image.url ,class: 'admin-list-image', :size => @img_size%></td>
        <td><%=@items[i][:itm_price]%></td>
        <td>X</td>
        <td><%=@item_ids[@items[i][:itm_id]]%></td>
        <td><%=@item_total_price[@items[i][:itm_id]]%></td>
      </tr>
      <%end%>
    </tbody>
  </table>
  <%= link_to 'Checkout', order_checkout_path%>
<%else%>
  <div class="empty_cart_holder">
    <%=image_tag "empty_cart.png",:class => "empty_cart", :size => @img_size%>
  </div>
<%end%>
